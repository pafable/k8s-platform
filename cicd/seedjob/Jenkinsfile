def platform_create = 'k8s-platform-create'
def platform_repo = 'https://github.com/pafable/k8s-platform.git'
def platform_branch = 'refs/head/master'

pipeline {
    agent {
      label 'jenkins-jenkins-agent'
    }

    options {
        timeout(
            time: 5,
            unit: 'MINUTES'
        )
    }

    tools {
      terraform 'tf-1-9-2'
    }

    stages{
        stage('seeding') {
            steps {
                jobDsl scriptText: """
                    pipelineJob("${platform_create}") {
                        definition {
                            cpsScm {
                                scm {
                                    git {
                                        remote {
                                            url('https://github.com/jenkinsci/job-dsl-plugin.git')
                                        }
                                        branch('*/master')
                                    }
                                }
                                lightweight()
                            }
                        }
                    }
                """
            }
        }
    }
}