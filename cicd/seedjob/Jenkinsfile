pipeline {
    agent {
      label 'jenkins-jenkins-agent'
    }

    options {
        timeout(
            time: 5,
            unit: 'MINUTES'
        )
    }

    tools {
      terraform 'tf-1-9-2'
    }


    stages {
        stage('Hello') {
            steps {
                echo 'hello this is a seed job'
            }
        }

        stage('tf check') {
            steps {
                sh 'terraform version'
            }
        }

        stage('seeding') {
            steps {
                jobDsl scriptText: """
                    pipelineJob('job-dsl-plugin') {
                        definition {
                            cpsScm {
                                scm {
                                    git {
                                        remote {
                                            url('https://github.com/jenkinsci/job-dsl-plugin.git')
                                        }
                                        branch('*/master')
                                    }
                                }
                                lightweight()
                            }
                        }
                    }
                """
            }

        }
    }
}