final String agent_label = 'jenkins-jenkins-agent'
final String platform_branch = 'refs/heads/master'
final String platform_create = 'k8s-platform-create'
final String platform_destroy = 'k8s-platform-destroy'
final String platform_repo = 'https://github.com/pafable/k8s-platform.git'
final String platform_script_path = 'cicd/deploy/Jenkinsfile'

final List<String> jobs = [
    platform_create,
    platform_destroy
]

pipeline {
    agent {
      label "${agent_label}"
    }

    options {
        timeout(
            time: 5,
            unit: 'MINUTES'
        )
    }

    stages{
        stage('seeding') {
            steps {
                script {
                    for (final String job : jobs) {
                        jobDsl scriptText: """
                            pipelineJob("${job}") {
                                definition {
                                    cpsScm {
                                        scm {
                                            git {
                                                remote {
                                                    url("${platform_repo}")
                                                }
                                                branch("${platform_branch}")
                                            }
                                        }
                                        scriptPath("${platform_script_path}")
                                        lightweight()
                                    }
                                }
                            }
                        """
                    }
                }
            }
        }
    }
}