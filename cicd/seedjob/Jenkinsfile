def platform_create = 'k8s-platform-create'
def platform_repo = 'https://github.com/pafable/k8s-platform.git'

pipeline {
    agent {
      label 'jenkins-jenkins-agent'
    }

    options {
        timeout(
            time: 5,
            unit: 'MINUTES'
        )
    }

    stage('seeding') {
        steps {
            jobDsl scriptText: """
                pipelineJob("${platform_create}") {
                    definition {
                        cpsScm {
                            scm {
                                git {
                                    remote {
                                        url("${platform_repo}")
                                    }
                                    branch('refs/head/master')
                                }
                            }
                            lightweight()
                        }
                    }
                }
            """
        }
    }
    }
}