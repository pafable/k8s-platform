final String agent_label = 'jenkins-jenkins-agent'
final String platform_branch = 'refs/heads/master'
final String platform_repo = 'https://github.com/pafable/k8s-platform.git'

// script path
final String agent_builder_script_path = 'cicd/agent-builder/Jenkinsfile'
final String platform_script_path = 'cicd/deploy/Jenkinsfile'

final def jobsToScripts = [
    'agent-builder': 'cicd/agent-builder/Jenkinsfile',
    'k8s-platform-create': 'cicd/deploy/Jenkinsfile',
    'k8s-platform-destroy': 'cicd/deploy/Jenkinsfile'
]

pipeline {
    agent {
      label "${agent_label}"
    }

    options {
        timeout(
            time: 5,
            unit: 'MINUTES'
        )
    }

    stages{
        stage('seeding') {
            steps {
                script {
                    jobsToScripts.each {
                        final job, final path ->
                            if (job != 'agent-builder') {
                                jobDsl scriptText: """
                                    pipelineJob("${job}") {
                                        definition {
                                            cpsScm {
                                                scm {
                                                    git {
                                                        remote {
                                                            url("${platform_repo}")
                                                        }
                                                        branch("${platform_branch}")
                                                    }
                                                }
                                                scriptPath("${path}")
                                                lightweight()
                                            }
                                        }
                                    }
                                """
                            } else {
                                jobDsl scriptText: """
                                    pipelineJob("${job}") {
                                        parameters {
                                            stringParam {
                                                description('Tag for Jenkins agent')
                                                name('JENKINS_AGENT_TAG')
                                                trim(true)
                                            }
                                        }
                                        definition {
                                            cpsScm {
                                                scm {
                                                    git {
                                                        remote {
                                                            url("${platform_repo}")
                                                        }
                                                        branch("${platform_branch}")
                                                    }
                                                }
                                                scriptPath("${path}")
                                                lightweight()
                                            }
                                        }
                                    }
                                """
                            }
                    }
                }
            }
        }
    }
}